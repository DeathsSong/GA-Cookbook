<h2>Edit user Page</h2>

<form class="editUser" method="POST" action="/users/edituser/<%= individualUser.id%>/?_method=put"> 
    <label for="name">Enter full name: </label>
    <input id="name" type="text" name="name" value="<%= individualUser.name%>">

    <label for="email">Enter email address: </label>
    <input id="email" type="email" name="email" value="<%= individualUser.email%>">

    <label for="password">Edit your password: </label>
    <input id="password" type="password" name="password">
    
    <input type="submit" value="submit">
</form>

<form class="deleteUser" method="POST" action="/users/edituser/<%= individualUser.id%>?_method=delete">
    <input type="submit" value="deleteUser">  
</form> 